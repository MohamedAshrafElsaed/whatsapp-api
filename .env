# Server
APP_PORT=8988
APP_ENV=development

# Database (adjust based on your PostgreSQL setup)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=whatsapp_api
DB_USER=root
DB_PASSWORD=

# JWT (must match your Laravel app's secret)
JWT_SECRET=your_shared_secret_with_laravel_must_be_same
JWT_ISSUER=your-laravel-app.com

# WhatsApp
WA_AUTO_RECONNECT=true
WA_QR_TIMEOUT=30s
MAX_DEVICES_PER_USER=5

# CORS (your Laravel app URL)
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000