# ==============================================
# Server Configuration
# ==============================================
APP_PORT=8080
APP_ENV=production
APP_DEBUG=false

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_api
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# ==============================================
# JWT Configuration (Shared with Laravel)
# ==============================================
# This secret MUST match the one used in Laravel
JWT_SECRET=your_shared_secret_key_with_laravel_change_this
JWT_ISSUER=your-laravel-app
JWT_AUDIENCE=whatsapp-api
JWT_EXPIRY=3600

# ==============================================
# WhatsApp Configuration
# ==============================================
WA_AUTO_RECONNECT=true
WA_QR_TIMEOUT=30
WA_QR_MAX_RETRIES=5
MAX_DEVICES_PER_USER=5

# ==============================================
# WebSocket Configuration
# ==============================================
WS_PING_INTERVAL=30
WS_PONG_TIMEOUT=10
WS_WRITE_TIMEOUT=10
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=https://your-laravel-app.com,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=43200

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ==============================================
# QR Code Configuration
# ==============================================
QR_CODE_SIZE=256
QR_CODE_RECOVERY_LEVEL=medium

# ==============================================
# Session Configuration
# ==============================================
SESSION_CLEANUP_INTERVAL=3600
SESSION_INACTIVE_TIMEOUT=86400
SESSION_AUTO_DISCONNECT_ON_LOGOUT=true

# ==============================================
# File Upload Configuration
# ==============================================
MAX_UPLOAD_SIZE=16777216
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# ==============================================
# Redis Configuration (Optional - for future caching)
# ==============================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# Metrics & Monitoring (Optional)
# ==============================================
METRICS_ENABLED=false
METRICS_PORT=9090

# ==============================================
# Webhook Configuration (Optional)
# ==============================================
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-laravel-app.com/api/webhooks/whatsapp
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=30